def count_pairs(nums, k):
    count = 0
    n = len(nums)
    for i in range(n):
        for j in range(i+1, n):
            if nums[i] == nums[j] and (i * j) % k == 0:
                count += 1
    return count

# Test cases
print(count_pairs([3, 1, 2, 2, 2, 1, 3], 2))  # Output: 4
print(count_pairs([1, 2, 3, 4], 1))  # Output: 0
